{% extends "base.html.twig" %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('/nao/css/articles/articles.css') }}">
    <link rel="stylesheet" href="{{ asset('/nao/css/articles/articles-mobile.css') }}">
{% endblock %}

{% block body %}

    <div class="row" id="titre-bar-mobile">
        <div class="col-12"><h1>MODIFIER UN ARTICLE</h1></div>
    </div>

    <div class="row" id="title">
        <div class="col-xl-1 col-lg-1 col-md-0 col-xs-0 space-bar"></div>
        <div class="col-xl-3 col-lg-3 col-md-12 col-xs-12 titre-bar-pc" id="titre-bar">
            <h1>MODIFIER UN ARTICLE</h1>
        </div>
        <div class="col-xl-8 col-lg-8 col-md-0 col-xs-0"></div>
    </div>



    <div class="row" id="modifier-content">
        <div class="col-xl-2 col-lg-1 col-md-1 col-sm-1 col-xs-1"></div>
        <div class="col-xl-3 col-lg-4 col-md-5 col-sm-5 col-xs-3">
            <div class="row">
                <div class="col-12">
                    <p class="titre-photo-modification">Photo</p>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <img class="photo-article" src="/img/blog/{{ post.image }}" alt="image-article">
                </div>
            </div>
        </div>
        <div class="col-xl-5 col-lg-6 col-md-5 col-sm-5 col-xs-5">
                <div class="form-group">
                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                        {{ form_row(form.title, {'label': 'Titre'}) }}
                        {{ form_row(form.author, {'label': 'Auteur'}) }}
                        {{ form_row(form.article, {'label': 'Article'}) }}
                        <button type="submit" class="btn-success">MODIFIER L'ARTICLE
                            <i class="fas fa-pencil-alt fa-1x"></i>
                        </button>
                    {{ form_end(form) }}
                </div>
                    <a href="{{ path('naturalist_articles_remove', {'id': post.id }) }}">
                        <button class="btn-danger">SUPPRIMER L'ARTICLE <i class="fas fa-trash-alt fa-1x"></i></button>
                    </a>
                    <a href="{{ path('naturalist_articles') }}">
                        <button class="btn-secondary" id="button-retour">RETOUR <i class="fas fa-share-square fa-1x"></i></button>
                    </a>
                </div>
        </div>
        <div class="col-xl-2 col-lg-1 col-md-1 col-sm-1 col-xs-1"></div>
    </div>

{% endblock %}