{{ form_start(form, {
    'action': path('newsletter'),
    'attr': {
        'class': 'newsletter-form'
    }}) }}
<div class="form-group" id="newsletter">
    {{ form_errors(form) }}
    {{ form_widget(form.email,
    {'attr': {
        'class': 'form-control',
        'placeholder': 'Entrez votre email',
        'aria-describedby':'emailHelp'
    }}) }}
</div>
<div class="col-12" id="envoyer">
    <button type="submit" class="bouton-menu" id="newsletter-button">S'inscrire Ã  la newsletter</button>
</div>
{{ form_end(form) }}

