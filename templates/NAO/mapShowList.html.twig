{% extends "base.html.twig" %}

{% block body %}

    <h1>Carte-liste</h1>

    <div>
        <img src="/img/observations/{{ observations[0].image }}" alt="" width="100px">
        <h2>Fiche détaillée</h2>
        <p>Nom commun: {{ birdInfos.commonName }}</p>
        <p>Nom scientifique: {{ birdInfos.scientificNames|join(', ') }}</p>
        <p>Ordre: {{ birdInfos.order }}</p>
        <p>Habitat: {{ birdInfos.habitat }}</p>
        <p>Autheur: {{ birdInfos.author|join(', ') }}</p>
    </div>

    <a href="{{ path('map') }}">
        <button>Retour à la page recherche</button>
    </a>

    <div>
        <h2>Il y à {{ observations|length }} {% if observations|length > 1 %} observations {% else %} observation{% endif %}</h2>

        {% for observation in observations %}
            <ul>
                <li>
                    <img src="/img/observations/{{ observation.image }}" alt="" width="100px">
                </li>
                <li>Observé le {{ observation.date|date("d/m/Y") }}</li>
                <li>Observateur: </li>
                <li>Coordonnées GPS:</li>
                <li>Latitude: {{ observation.latitude}}</li>
                <li>Longitude: {{ observation.longitude }}</li>
                <li>Autres informations: {{ observation.content }}</li>
            </ul>
        {% endfor %}
        
    </div>

{% endblock %}