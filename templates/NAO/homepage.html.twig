            <p>Bienvenue sur notre site</p>
        </div>

        <button class="bloc5" href="{{ path('map') }}">CARTE</button>

        <button class="bloc6" href="{{ path('contact') }}">CONTACT</button>

        <button class="bloc7" href="{{ path('faq') }}">F.A.Q's</button>

        <button class="bloc8" href="{{ path('blog') }}">BLOG</button>

    </div>
{% endblock %}

