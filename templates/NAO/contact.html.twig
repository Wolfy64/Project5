{% extends "base.html.twig" %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('/nao/css/contact/contact.css') }}">
    <link rel="stylesheet" href="{{ asset('/nao/css/contact/contact-mobile.css') }}">
{% endblock %}

{% block body %}

    {% for message in app.flashes('alert alert-warning alert-dismissible fade show') %}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
    {% endfor %}

    <div class="row" id="titre-bar-mobile">
        <div class="col-12"><h1>CONTACT</h1></div>
    </div>

    <div class="row" id="title">
        <div class="col-xl-1 col-lg-1 col-md-0 col-xs-0 space-bar"></div>
        <div class="col-xl-2 col-lg-2 col-md-12 col-xs-12 titre-bar-pc" id="titre-bar">
            <h1>CONTACT</h1>
        </div>
        <div class="col-xl-9 col-lg-9 col-md-0 col-xs-0"></div>
    </div>

    <div class="row" id="contact-content">
        <div class="col-xl-3 col-lg-3" id="infos-contact">
            <i class="fas fa-address-card fa-3x" id="contact-icone"></i>
            <div class="row">
                <div class="col-12">
                    <p class="asso">Association NAO | Nos amis les oiseaux</p>
                    <p class="coordonnees">42, rue de Paris</p>
                    <p class="coordonnees">75008 - PARIS</p>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <i class="fas fa-phone-square fa-2x" id="contact-icone"></i>
                    <div class="row">
                        <div class="col-12">
                            <p>01 55 23 57 94</p>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <i class="fas fa-envelope fa-2x" id="contact-icone"></i>
                    <div class="row">
                        <div class="col-12">
                            <p>contact@nao.fr</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-4 map-contact">
            <iframe id="map-contact" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2622.8642519570085!2d2.303
            8935158931277!3d48.898924179291456!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66f
            0a5943ee3b%3A0xaa1b4c2350793259!2s42+Rue+de+Paris%2C+92110+Clichy!5e0!3m2!1sfr!2sfr!4v1520267
            254765" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
        <div class="col-xl-4 col-lg-4" id="formulaire-contact">
            {{ form_start(form) }}
            {{ form_errors(form) }}
                <div class="form-row">
                    <div class="form-group col-md-6">
                        {{ form_row(form.firstName,{'label': 'Pr√©nom*'}) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_row(form.lastName,{'label': 'Nom*'}) }}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        {{ form_row(form.email,{'label': 'Email*'}) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_row(form.object,{'label': 'Objet*'}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_row(form.message,{'label': 'Message*'}) }}
                </div>
                <p>* obligatoire</p>
                <div class="row">
                    <div class="col-12" id="envoyer">
                        <button type="submit" class="bouton">Envoyer</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>


{% endblock %}